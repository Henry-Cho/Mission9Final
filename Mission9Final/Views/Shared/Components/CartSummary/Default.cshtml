@{
}

@model Basket
<div class="">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            $@Model.Items.Sum(x => x.Quantity * x.Book.Price).ToString("#,##0.00")
        </small>
    }
<a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Shopping">
    <i class="fa fa-shopping-cart"></i>
</a>
</div>